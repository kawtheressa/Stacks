<%# app/views/tasks/_task.html.erb %>
<%= turbo_frame_tag dom_id(task) do %>
  <div class="grid grid-cols-12 gap-4 p-4 items-center hover:bg-indigo-50 transition-colors duration-150">
    <div class="col-span-6 md:col-span-7 font-medium text-gray-800 truncate">
      <%= task.title %>
    </div>
    <div class="col-span-2">
      <span class="px-2 py-1 text-xs font-medium rounded-full <%= task.completed? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
        <%= task.completed? ? 'Completed' : 'Pending' %>
      </span>
    </div>
    <div class="col-span-2 text-right flex items-center justify-end space-x-1">
      <%= link_to edit_task_path(task), class: "inline-flex items-center p-1.5 text-xs font-medium rounded text-indigo-700 bg-indigo-100 hover:bg-indigo-200", data: { turbo_frame: "task_form" } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
      <% end %>

      <%= link_to task_path(task), class: "inline-flex items-center p-1.5 text-xs font-medium rounded text-blue-700 bg-blue-100 hover:bg-blue-200" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
        </svg>
      <% end %>

      <div class="inline-block">
        <%= button_to task_path(task), method: :delete, class: "inline-flex items-center p-1.5 text-xs font-medium rounded text-red-700 bg-red-100 hover:bg-red-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
        <% end %>
      </div>
    </div>
  </div>
<% end %>